$white = #fff;
$colorTitle = #222626;
$colorPar = #959595;
$colorDetails = #67676d;
$colorDetailsText = #959595;
$bgpink = #f5989d;


$phone = "only screen and (max-width: 480px)";
$phoneSE = "only screen and (max-width: 400px)";
$phoneAl = "only screen and (max-width: 600px)";
$tablet = "only screen and (max-width: 768px)";
$ultra1 = "only screen and (max-width: 992px)";
$tabletW = "only screen and (max-width: 990px)";
$ultra = "only screen and (max-width: 1024px)";
$laptop = "only screen and (max-width: 1400px)";
$s1200 = "only screen and (max-width: 1200px)";
$notebook = "only screen and (max-width: 1367px)";

*
	box-sizing border-box
	outline none

ul,ol,h1,h2,h3,h4,h5,h6,p
	padding 0
	margin 0

li
	list-style none

body
	font-family "Open Sans"

a
	text-decoration none
	&:hover
		text-decoration none
	&:focud
		text-decoration none

.header
	background url('../img/header_bg.png') center no-repeat
	background-size cover
	min-height 100vh
	position relative
	&_logo
		margin-top 55px
	&_block
		position absolute
		top 50%
		transform translate(0, -50%)
		@media $ultra1
			width 100%
			left 50%
			transform translate(-50%, -50%)
			text-align center
		&_title
			font-size 60px
			color $white
			@media $phone
				font-size 50px
			@media $phoneSE
				font-size 40px
		&_subtitle
			margin-top 20px
			font-size 13px
			color $white
			line-height 2
			@media $phone
				br
					display none
	&_phone
		position absolute
		top 75%
		right 35%
		transform translate(50%,-50%)
		img
			max-height 850px
		@media $ultra1
			display none
	&_mark
		position absolute
		bottom 45%
		left -50px
		transform rotate(-90deg)
		@media $ultra
			display none
		&_link
			color $white
			text-transform uppercase
			font-weight 600
			&:hover
				color $white
			&:focus
				color $white
		&_span
			font-weight 100

.title
	font-size 35px
	color $colorTitle

.start
	padding 100px 0 80px
	background-color $white
	&_block
		margin-top 40px
		&_box
			float left
			width 50%
			@media $tablet
				float left
				width 100%
			p
				font-size: 14px
				color $colorPar
				line-height 1.7
			&_text
				margin-top 20px

		&_box-right
			float right
			width 49%
			padding-top 90px
			padding-left 30px
			@media $s1200
				padding-top 110px
			@media $ultra1
				padding-top 135px
			@media $tablet
				float left
				width 100%
				padding 0px
				margin-top 20px
			&_text
				margin-top 25px


.about
	background-color $white
	&_box
		float left
		width 33.33%
		min-height 288px
		padding 50px 40px
		background-color $bgpink
		position relative
		z-index 2
		@media $ultra1
			width 50%
		@media $tablet
			width 100%
		&_title
			font-size 30px
			font-weight 200
			color $white
		&_text
			margin-top 30px
			font-size 13px
			font-weight 400
			color $white
			line-height 1.7
		&_more
			display block
			margin-top 40px
			color $white
			cursor pointer
			&_link
				color $white
				position relative
				z-index 1
				&:hover
					color $white
					outline none
					.arrow
						margin-left 15px
						transition .3s
				&:focus
					color $white
					outline none
				.arrow
					margin-left 10px
					transition .3s
			&_like
				float right
				color $white
				position relative
				z-index 2
	&_box-t
		width 25%
		min-height 320px
		@media $ultra
			width 33.33%
		@media $tablet
			width 50%
		@media $phoneAl
			width 100%
			height auto !important
			max-height auto
			min-height auto
	&_box-t.about_box-purp
		display block
	&_box-large
		width 66.66%
		background url("../img/block-image/man.png") center no-repeat
		@media $ultra1
			width 50%
		@media $tablet
			width 100%
			br
				display none
		&:before
			content ''
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background-color rgba(9,30,40,.3)
			z-index -1
		.about_box_more
			margin-top 60px
			@media $s1200
				margin-top 83px
			@media $ultra1
				margin-top 40px
	&_box-tLarge
		width 50%
		min-height 320px
		@media $ultra
			width 66.66%
		@media $tablet
			width 100%
			min-height 280px
	&_box-violet
		background-color #615f7d
	&_box-ice
		background url("../img/block-image/ice.png") center no-repeat
		background-size cover
		&:before
			content ''
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background-color rgba(9,30,40,.3)
			z-index -1
	&_box-purp
		background-color #bd8cbf
		display none
		@media $ultra1
			display block
	&_box-lime
		background-color #82ca9c



.details
	padding 100px 0 160px
	background-color $white
	position relative
	@media $tablet
		padding 100px 0 110px
	&_mark
		position absolute
		top 150px
		left -20px
		transform rotate(-90deg)
		@media $ultra
			display none
		&_link
			color $colorDetails
			text-transform uppercase
			font-weight 600
			&:hover
				color $colorDetails
			&:focus
				color $colorDetails

	&_block
		margin-top 70px
		&_box
			float left
			width 25%
			padding-right 30px
			@media $tablet
				width 50%
				margin-bottom 50px
			@media $phoneAl
				width 100%
			&_title
				font-size 13px
				font-weight 600
				color $colorDetails

			&_text
				margin-top 30px
				color $colorDetailsText
				line-height 1.7
				font-size 13px